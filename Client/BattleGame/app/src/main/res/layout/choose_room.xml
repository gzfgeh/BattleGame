<?xml version="1.0" encoding="utf-8"?>
<com.gzfgeh.battlegame.view.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:gzfgeh="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        gzfgeh:layout_heightPercent="12%h"
        android:id="@+id/tv_user"
        android:text="@string/app_name"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/head_lb"/>

    <ListView
        android:layout_width="0dp"
        android:layout_height="0dp"
        gzfgeh:layout_widthPercent="60%w"
        gzfgeh:layout_heightPercent="60%h"
        android:layout_centerInParent="true"
        android:id="@+id/list_view"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        gzfgeh:layout_widthPercent="10%w"
        android:text="@string/create_room"
        android:id="@+id/btn_create_room"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        gzfgeh:layout_marginTopPercent="20%h"
        gzfgeh:layout_marginRightPercent="3%w"/>

</com.gzfgeh.battlegame.view.PercentRelativeLayout>
