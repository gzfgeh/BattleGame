<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="battlegame.battlegame" >

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name="com.gzfgeh.battlegame.App">
        <activity
            android:name="com.gzfgeh.battlegame.ui.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/MyTheme.NoTitleBar.CustomBackground">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.gzfgeh.battlegame.ui.MainDisplay"/>
        <activity android:name="com.gzfgeh.battlegame.ui.Register"/>
        <service android:name="com.gzfgeh.battlegame.service.MinaService"/>

    </application>

</manifest>
