<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:id="@+id/normal_dialog"
        android:text="Normal Dialog"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/list_view_normal_dialog"
        android:text="ListView Normal Dialog"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/normal_dialog"/>

    <Button
        android:id="@+id/list_view_image_dialog"
        android:text="ListView Image Dialog"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/list_view_normal_dialog"/>

    <Button
        android:id="@+id/list_view_checked_text"
        android:text="ListView Checked Dialog"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/list_view_image_dialog"/>

    <Button
        android:id="@+id/list_view_checked_multext"
        android:text="ListView Checked Dialog"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/list_view_checked_text"/>

    <Button
        android:id="@+id/list_view_custom_checked"
        android:text="ListView Custom Dialog"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/list_view_checked_multext"/>

</RelativeLayout>
